<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="fragments.ResourceChoosingFragment"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:minWidth="300dp"
            android:gravity="start|left|center_vertical|"
            android:height="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/resource_choosing_title_view"
            android:textColor="#000"/>

        <TextView
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:gravity="left|start"
            android:height="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/resource_choosing_sub_title_view"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="200dp"
            android:id="@+id/resource_choosing_list_view"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:gravity="right|end|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/basic_button_selector"
            android:textColor="@color/primary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/resource_choosing_cancel_button"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/basic_button_selector"
            android:textColor="@color/primary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/resource_choosing_continue_button"
            />

    </LinearLayout>
</LinearLayout>